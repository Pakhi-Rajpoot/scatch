<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/cart.css">
</head>
<body>
    <%- include("./partials/header") %>

   
    <% user.cart.forEach(function(u){ %>
    <div class="main">
                <div class="left">
                    <div class="image">
                        <img src="<%= u.image %>" alt="">
                    </div>
                    <div class="upperPanel">
                        <h3>Clinge Bag</h3>
                        <div>
                            <div class="plus">&#x2795;</div>
                            <div class="number">01</div>
                            <div class="minus">&#x2796;</div>
                        </div>
                    </div>
                    <div class="lowerPanel">
                        <h4>Total Price</h4>
                        <h2>Rs.<%= u.price %></h2>
                    </div>
                </div>
                <div class="right">
                    <h3>Price Breakdown</h3>
                    <div class="details">
                        <div class="detail">
                            <h4>Total MRP</h4>
                            <h4>Rs.<%= u.price %></h4>
                        </div>
                        <div class="detail">
                            <h4>Discount on MRP</h4>
                            <h4>Rs.<%= u.discount %></h4>
                        </div>
                        <div class="detail">
                            <h4>Platform Fee</h4>
                            <h4>Rs.20</h4>
                        </div>
                        <div class="detail">
                            <h4>Shipping Fee</h4>
                            <h4>FREE</h4>
                        </div>
                    </div>
                    <div class="horizontalLine"><hr></div>
                    <div class="totalAmt">
                        <h3>Total Amount</h3>
                        <h3>Rs.<%= u.price - u.discount +20 %></h3>
                    </div>
                </div>
            
                
            
    

           
            
        
        
    </div>
    <% }) %>
</body>
</html>